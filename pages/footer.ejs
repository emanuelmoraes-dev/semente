<div id="footer" style="<%=styles.pagina ?? '' %>"> 
  <div class="left" style="<%= esquerda.styles.pagina ?? '' %>">
    <img class="imagem" src="/img/<%= esquerda.imagem %>" alt="COPA" style="<%= esquerda.styles.imagem %>">
    <p class="subtitle" style="<%= esquerda.styles.subtitulo ?? ''%>">
      <%= esquerda.subtitulo %>
    </p>
  </div>
  <div class="right" style="<%= direita.styles.pagina ?? '' %>">
    <h2 class="title" style="<%= direita.styles.titulo ?? '' %>">
      <%= direita.titulo %>
    </h3>
    <p class="description" style="<%= direita.styles.descricao ?? '' %>"><%= direita.descricao %></p>
    <% if (direita.instagramImagem && direita.instagramLink) { %>
      <a target="_blank" class="link-icon" style="<%= direita.styles.instagramLink %>" href="<%= direita.instagramLink %>">
        <img alt="instagram" class="icon-instagram" style="<%= direita.styles.instagramImagem %>" src="/img/<%= direita.instagramImagem ?? '' %>">
      </a>
    <% } %>
    <% if (direita.whatsappImagem && direita.whatsappLink) { %>
      <a target="_blank" class="link-icon" style="<%= direita.styles.whatsappLink %>" href="<%= direita.whatsappLink %>">
        <img alt="whatsapp" class="icon-whatsapp" style="<%= direita.styles.whatsappImagem %>" src="/img/<%= direita.whatsappImagem ?? '' %>">
      </a>
    <% } %>
  </div>
</div>
